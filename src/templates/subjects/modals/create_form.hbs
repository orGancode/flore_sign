<div class="modal create-subject">
  <div class="modal-head">
    <h3>创建科目</h3>
  </div>
  <div class="modal-body">
    <form class="form subject-form" id='subject-form' data-id='{{data.id}}'>
      <span>备注：带<strong>*</strong>为必填项</span>
      <div class="input-group">
        <label for=""><span class="required">*</span>科目名称：</label>
        <div>
          <input type="text" name="name" maxlength="20" value="{{data.name}}" required>
        </div>
      </div>
      <div class="input-group">
        <label for=""><span class="required">*</span>科目链接：</label>
        <div>
          <input type="text" name="subject_url" value="{{data.subject_url}}" required>
        </div>
      </div>
      <div class="input-group">
        <label for=""><span class="required">*</span>科目图片：</label>
        <div>
          {{#if data}}
            {{#if data.subject_image}}
              <input type="hidden" name="subject_image" value="{{data.subject_image}}">
              <a href='javascript:;' class="btn btn-secondary js-upload-file"><img src="{{data.subject_image}}" alt="{{data.subject_image}}"></a>
            {{else}}
              <a href='javascript:;' class="btn btn-secondary js-upload-file">点击上传文件</a>
            {{/if}}
            <input type="file" name="subject_image_file">
          {{else}}
            <a href='javascript:;' class="btn btn-secondary js-upload-file">点击上传文件</a>
            <input type="file" name="subject_image">
          {{/if}}
        </div>
      </div>
      <div class="btn-group">
        <a href="javascript:;" class="btn btn-info js-close">取消</a>
        <button type="submit" class="btn btn-primary">提交</button>
      </div>
    </form>
  </div>
</div>
