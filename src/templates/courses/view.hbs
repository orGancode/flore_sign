<div class="user-center">
  {{> '../../partials/head/back_view.hbs'}}
  <div class="body">
    <div class="main-left">
      {{> '../../partials/sidebar/view.hbs'}}
    </div>
    <div class="main-right">
      <div class="content course-manage">
        <p class="bread-crumb">课程管理</p>
        <form class="form filter-form">
          <div class="input-group">
            <label for="">科目：</label>
            <div class="select">
              <select name="subject_id" id="" data-subjects="{{tstring SUBJECT}}">
                <option value="">请选择</option>
                {{#each SUBJECT}}
                <option value="{{id}}" {{getSelected ../subject_id id}}>{{name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="input-group pull-right">
            <input type="submit" class="btn btn-primary" value='搜索'>
            <a href="javascript:;" class="btn btn-info js-reset-search">重置</a>
          </div>
        </form>
        <h3 class="ops">
          <a href="javascript:;" class='btn btn-primary js-create-course'>创建课程</a>
        </h3>
        <div class="table-container">
          <table class="table">
            <thead>
              <th>课程ID</th>
              <th>课程名</th>
              <th>科目名称</th>
              <th>创建时间</th>
              <th>课程时间</th>
              <th>当前期数</th>
              <th>创建者</th>
              <th>状态</th>
              <th>操作</th>
            </thead>
            <tbody>
              {{#each DATA}}
              <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{subject_name}}</td>
                <td>{{create_time}}</td>
                <td>{{start_time}} ~ {{end_time}}</td>
                <td>{{period}}</td>
                <td>{{#if create_user}}{{create_user}}{{else}}-{{/if}}</td>
                <td>{{#if (isTrue active)}}有效{{else}}失效{{/if}}</td>
                <td>
                  <a href="javascript:;" class="js-edit-course" data-info='{{tstring this}}'>编辑</a>
                  {{#unless (isTrue active)}}<a href="javascript:;" data-id='{{id}}' class="js-del-course">删除</a>{{/unless}}
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
