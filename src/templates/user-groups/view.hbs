<div class="user-center">
  {{> '../../partials/head/view.hbs'}}
  <div class="body">
    <div class="main-left">
      {{> '../../partials/sidebar/view.hbs'}}
    </div>
    <div class="main-right">
      <div class="content users-manage">
        <p class="bread-crumb">用户组管理</p>
        <a class="btn btn-primary" href='#'>新增用户组</a>
        <br>
        <br>
        <div class="table-container">
          <table class="table">
            <thead>
              <th>用户级名称</th>
              <th>组描述</th>
              <th>操作</th>
            </thead>
            <tbody>
              {{#each DATA.items}}
              <tr>
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>
                  <a href="#group-users?id={{id}}">查看用户</a>
                  <a href="#group-auth?id={{id}}">权限管理</a>
                  <a href="javascript:;" class="js-edit-group" data-info='{{tstring this}}'>编辑</a>
                  <a href="javascript:;" data-id='{{id}}' class="js-del-group">删除</a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
